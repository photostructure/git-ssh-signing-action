{
  "name": "git-ssh-signing-action",
  "description": "GitHub Action for setting up git to sign commits and tags with SSH keys in CI/CD workflows",
  "version": "1.1.0",
  "author": "PhotoStructure",
  "type": "module",
  "private": false,
  "main": "dist/main.js",
  "exports": {
    ".": "./dist/main.js"
  },
  "homepage": "https://github.com/photostructure/git-ssh-signing-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/photostructure/git-ssh-signing-action.git"
  },
  "bugs": {
    "url": "https://github.com/photostructure/git-ssh-signing-action/issues"
  },
  "keywords": [
    "actions",
    "github-actions",
    "ssh",
    "signing",
    "git",
    "commits",
    "tags",
    "verification",
    "security",
    "ci-cd"
  ],
  "files": [
    "dist/",
    "action.yml",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@11.7.0",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/photostructure"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "update": "run-p update:*",
    "update:ncu": "npm-check-updates -u",
    "install:npm": "npm i",
    "xinstall:pinact": "go install github.com/suzuki-shunsuke/pinact/v3/cmd/pinact@latest",
    "update:gha": "pinact run -u --min-age 7",
    "bundle": "npm run fmt && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "fmt": "npx prettier --write .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/run.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "run-s clean update install:npm fmt lint test package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/exec": "^2.0.0",
    "@actions/io": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@github/local-action": "^6.0.2",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "npm-check-updates": "^19.2.0",
    "npm-run-all2": "8.0.4",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rollup": "^4.53.3",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
